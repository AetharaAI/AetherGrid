# Database URLs
POSTGRES_URL=postgresql://aether:development@localhost:5433/aethergrid
POSTGRES_PASSWORD=development
MONGODB_URL=mongodb://localhost:27018/aethergrid
WEAVIATE_URL=http://localhost:8101
REDIS_URL=redis://localhost:6395

# API Keys (All OPTIONAL - works without any API keys!)
# Cohere API key - only needed if you want to use Cohere embeddings instead of local
COHERE_API_KEY=
# Anthropic API key - for Claude adapter features
ANTHROPIC_API_KEY=sk-ant-...

# Embedding Configuration
# PRIMARY_EMBEDDING_PROVIDER: "local" (sentence-transformers) or "cohere" (Cohere API)
PRIMARY_EMBEDDING_PROVIDER=local
# FALLBACK_ENABLED: Use alternate provider if primary fails
FALLBACK_ENABLED=true
# LOCAL_MODEL_NAME: sentence-transformers model (default: all-mpnet-base-v2, 768 dims)
LOCAL_MODEL_NAME=all-mpnet-base-v2
# COHERE_MODEL_NAME: Cohere model (embed-english-v3.0 or embed-multilingual-v3.0)
COHERE_MODEL_NAME=embed-english-v3.0
# VECTOR_DIMENSIONS: Must match your embedding model (768 for mpnet, 1024 for Cohere)
VECTOR_DIMENSIONS=768

# Service Configuration
CAPTURE_ENABLED=true
PROCESSING_BATCH_SIZE=50

# Background Service
RUN_AS_DAEMON=true
LOG_LEVEL=info
HEALTH_CHECK_PORT=8100

# API Server
API_HOST=0.0.0.0
API_PORT=8100
